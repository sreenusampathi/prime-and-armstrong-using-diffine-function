#include<stdio.h>
int main()
{
	int n,i,sum=0;
	printf("enter the number");
	scanf("%d",&n);
	for (i=1;i<n;i++)
	{
		n=n/1;
		  sum=sum+i;
	}
	if (sum==0)
	{
		printf("the entered number is perfct number");
	
		}
			else
			{
		printf("the entered number is a not a perfect number");
	}
	 return 0;
}
